{% extends 'base.html.twig' %}

{% block   title %}Post{% endblock %}

{% block body %}
<div class="container mt-5">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            <b>{{ message }}</b>
        </div>
    {% endfor %}
    <h2 class="card-title mb-3">{{ posts.titre|upper }}</h2>
    <img src="{{ asset('images/' ~ posts.image )}}" alt=""style="height:300px;width: 100%">
    <p class="card-text"><small class="text-muted">Cr√©er le: {{ posts.createdAt|date }}</small></p>
    <div class="row mt-5 mb-5">
        <div class="col-md-8 ms-5">
            <h6 style="line-height: 40px">{{ posts.description|raw }}</h6>
        </div>
        <div class="col-md-3 ms-4">
            <h4>{{ posts.user.name }}</h4>
        </div>
    </div>

</div>
{% endblock %}