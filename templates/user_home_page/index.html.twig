{% extends 'base.html.twig' %}

{% block title %}Hello UserHomePageController!{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
               <b>{{ message }}</b>
            </div>
        {% endfor %}
        <div class="float-end">
            <b class="mt-4">Publication:</b><br>
            <span>Poster une nouvelle article:</span><br>
            <a href="{{ path("app_new_post")}}"class="btn btn-success btn-sm">Ajouter une nouvelle article</a>
        </div>
        <br><br><br>
        {% if posts|length>0 %}
        <b class="mt-4">Listes des article articles:</b>
        <br><br>
        <div class="row">
            {% for post in posts %}
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <img src="
                        {{ asset('images/' ~ post.image )}} " class="card-img-top" alt="..."style="height:150px;">
                        <div class="card-body"style="background: rgb(250,250,250)">
                            <h5 class="card-title">{{ post.titre|upper }}</h5>
                            <a href="{{ path('app_user_home_page_about',{'id':post.id}) }}" class="btn btn-primary btn-sm">Voir en détails...</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            {# display navigation #}
                <div class="navigation d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(posts) }}
                </div>
        </div>
        <br>
        <b class="mt-4 mb-3">Mes articles</b>
        <div class="row">
            {% if user.posts|length > 0 %}
                {% for mypost in myposts %}
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <img src="{{ asset('images/' ~ mypost.image )}} " class="card-img-top" alt="..."style="height:150px;">
                            <div class="card-body"style="background: rgb(250,250,250)">
                                <h5 class="card-title">{{ mypost.titre|upper }}</h5>
                                <a href="{{ path('app_user_home_page_about',{'id':mypost.id}) }}" class="btn btn-primary btn-sm">Voir en détails...</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-danger"><b>Vous n'avez pas encore poster une article.</b></p>
            {% endif %}
        </div>
        {% else %}
            <div class="alert alert-danger mt-5"><b>Il n'y a pas encore une article poster pour le moment.</b></div>
        {% endif %}
    </div>

{% endblock %}
