{% extends 'base.html.twig' %}

{% block title %}Hello UserHomePageController!{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% if is_granted("ROLE_USER") %}
            <div class="float-end">

                <b class="mt-4">Publication:</b><br>
                <span>Poster une nouvelle article:</span><br>
                <a href="{{ path("app_new_post")}}"class="btn btn-success btn-sm">Ajouter une nouvelle article</a>
            </div>
            <br><br><br>
        {% endif %}
        {% if posts|length>0 %}
        <b class="mt-4">Listes des article:</b>
        <br><br>
        <div class="row">
            {% for post in posts %}
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <img src="
                        {{ asset('images/' ~ post.image )}} " class="card-img-top" alt="..."style="height:150px;">
                        <div class="card-body"style="background: rgb(250,250,250)">
                            <h5 class="card-title">{{ post.titre|upper|slice(0,18)~'...' }}</h5>
                            <small class="card-text ">{{ post.description|slice(0,100) ~ '...'}}</small><br><br>
                            <a href="{{ path('app_user_home_page_about',{'id':post.id}) }}" class="btn btn-primary btn-sm">Voir en d√©tails...</a>
                            <small style="float: right;">{{ post.user.lastname }}</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
            {# display navigation #}
                <div class="navigation d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(posts) }}
                </div>
        </div>
        {% endif %}
        <br>
    </div>

{% endblock %}
