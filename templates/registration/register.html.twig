{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


    <div class="container mt-3">

        <div class="col-md-5 mx-auto">
            <h1>Registration</h1>
            {{ form_start(registrationForm,{attr:{novalidate:'novalidate'}}) }}
            <div class="form-group">
                {{ form_label(registrationForm.name) }}
                {{ form_widget(registrationForm.name) }}
            </div>
            <div class="form-error">
                {{ form_errors(registrationForm.name) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.lastname) }}
                {{ form_widget(registrationForm.lastname) }}
            </div>
            <div class="form-error">
                {{ form_errors(registrationForm.lastname) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email) }}
            </div>
            <div class="form-error">
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="form-group">
                {{ form_widget(registrationForm.plainPassword) }}
            </div>
            <div class="form-error">
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <button type="submit" class="btn btn-sm btn-primary mt-4 mb-2">S'inscrire</button>
            <br>
            <span>Vous avez déjà un compte? <a href="{{ path('app_login') }}"> Se connecter</a></span>
            {{ form_end(registrationForm) }}
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_logout') }}" class="btn btn-primary btn-sm">Se déconnecter</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
